# Google Workspace SMTP relay credentials
SMTP_HOST=smtp-relay.gmail.com
SMTP_PORT=587
SMTP_TLS_MODE=starttls
SMTP_USERNAME=noreply@marinecitizen.com
# Generate an App Password or use the Workspace SMTP relay credentials (no spaces)
SMTP_PASSWORD=<google_app_password_without_spaces>
SMTP_DEFAULT_FROM=noreply@marinecitizen.com

# Whitelisted sender addresses and domains
SMTP_ALLOWED_FROM=noreply@marinecitizen.com,noreply@fsquared.ai,noreply@onlyallow.ai,noreply@quirkbot.ai,noreply@virusfor.ai,noreply@batchforge.ai
SMTP_ALLOWED_DOMAINS=marinecitizen.com,fsquared.ai,onlyallow.ai,quirkbot.ai,virusfor.ai,batchforge.ai

# Recipient routing. Each entry uses `domain=recipient1@example.com,recipient2@example.com`
CONTACT_ROUTE_MAP=marinecitizen.com=ops@marinecitizen.com;fsquared.ai=ops@fsquared.ai
# Optional fallback recipients if no domain match is found
CONTACT_DEFAULT_RECIPIENTS=ops@marinecitizen.com

# Basic rate limiting (requests per IP within the window)
CONTACT_RATE_LIMIT_COUNT=10
CONTACT_RATE_LIMIT_WINDOW=60

# Log destination (created automatically)
EMAIL_LOG_PATH=logs/email-handler.log
